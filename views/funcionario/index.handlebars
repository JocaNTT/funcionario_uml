<section class="container">
  <section class="d-flex justify-content-between mt-4">
    <h2>Página inicial do Funcionário</h2>
    <a href="/funcionario/create" class="btn btn-primary">Cadastrar novo Funcionário</a>
  </section>
</section>
<hr>
<section class="my-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Salário</th>
        <th>Cargo</th>
        <th>Departamento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {{#each dados}}
      <tr>
        <td>{{dataValues.id}}</td>
        <td>{{dataValues.nome}}</td>
        <td>R$ {{dataValues.salario}}</td>
        <td>{{dataValues.cargo}}</td>
        <td>{{dataValues.departamentoId}}</td>
        <td>
          <a href="" data-bs-toggle="modal" data-bs-target="#modal{{dataValues.id}}" class="btn btn-sm btn-danger">Excluir</a>
        </td>
      </tr>
      {{>modalDelete idItem = dataValues.id}}
      {{/each}}
    </tbody>
  </table>
</section>